Ia <- Ilim


# Función de calculo de tiempo inverso de disparo
td<-function(I, Ia=600, k=0.14, alpha=0.02, dial=0.08) {

  #Ia <- 600.0 # Iarranque
    
  td <- dial*k/(((I/Ia)^alpha)-1)

  return(td)
}

